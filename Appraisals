appraise "rails-6-1" do
  gem "rails", "~> 6.1.0"

  group :development, :test do
    # Version in lockstep with ActiveRecord's sqlite3 adapter
    # https://github.com/rails/rails/blob/6-1-stable/activerecord/lib/active_record/connection_adapters/sqlite3_adapter.rb#L13-L14
    gem "sqlite3", "~> 1.4"
  end
end

